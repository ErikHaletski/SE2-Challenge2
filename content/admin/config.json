{
    "backend": {
        "name": "github",
        "repo": "ErikHaletski/SE2-Challenge2"
    },
    "media_folder": "/static/media",
    "public_folder": "/media",
    "collections": [
        {
            "name": "blog",
            "label": "Blog",
            "folder": "/content/blog",
            "fields": [
                {
                    "label": "Title",
                    "name": "title",
                    "widget": "string"
                },
                {
                    "label": "Body",
                    "name": "body",
                    "widget": "markdown"
                },
				{ 
					"label": "Description",
					"name": "description", 
					"widget": "string" 
				},
				{ 
					"label": "Publish Date", 
					"name": "date", 
					"widget": "datetime" 
				}
            ]
        }
    ]
}
